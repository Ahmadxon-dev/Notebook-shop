<h1>Add Notebooks</h1>

<form action="/add" method="POST" class="container z-depth-4 f_control">
    <div class="input-field  ">
        <input id="title" name="title" type="text" class="validate" required/>
        <label for="title">Notebooks Model</label>
        <span class="helper-text" data-error="Notebooks Name"></span>
    </div>


    <div class="input-field">
        <input id="price" name="price" type="number" class="validate" required min="1" />
        <label for="price">Price</label>
        <span class="helper-text" data-error="Price"></span>
    </div>
    <div class="input-field">
        <input id="img" name="img" type="text" class="validate" required />
        <label for="img">Url Image</label>
        <span class="helper-text" data-error="URL Image"></span>

    </div>
    <div class="input-field col s12">
        <textarea id="descr" name="descr" class="materialize-textarea validate" required></textarea>
        <label for="descr">Describtion</label>
        <span class="helper-text" data-error="Enter Describtion"></span>

    </div>
    <button class="btn btn-primary">Add Notebook</button>
</form>